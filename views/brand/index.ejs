<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brand</title>
</head>
<body>
    
    <h1>Brand</h1>


    <!-- LOOPING DATA DENGAN EJS -->
    <% for (const brand of brands) { %>
        <img src="/images/<%= brand.image %>" alt="<%= brand.name %>" width="200">
        <h3><%= brand.name %> | <%= brand.city %></h3>
        <a href="/brands/update/<%= brand.id %>">Update</a>
        <form action="/brands/delete/<%= brand.id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
        </form>
        <hr>
    <% } %>

    <a href="/brands/add">Create</a>
    

</body>
</html>